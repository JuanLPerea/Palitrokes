<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo"
            tools:layout_editor_absoluteY="183dp" />

        <TextView
            android:id="@+id/onlineTV"
            android:layout_width="59dp"
            android:layout_height="19dp"
            android:layout_gravity="bottom|right|end"
            android:layout_marginRight="30dp"
            android:text="Online: 0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/pako" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nickET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nickname"
                android:inputType="textPersonName" />

            <ImageView
                android:id="@+id/avatarIV"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:onClick="personalizarAvatar"
                android:src="@drawable/camera" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/jugarBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="jugar"
                android:text="Jugar" />


            <Button
                android:id="@+id/jugaronlineBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:onClick="jugarOnline"
                android:text="Jugar Online"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/recordsTV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="crearSalas"
            android:text="Records"
            android:textSize="24sp" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recordsRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>