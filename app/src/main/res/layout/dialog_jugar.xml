<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogJugar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:gravity="center|center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Buscar Rival"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/rivalNickET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Rival" />

    <ImageView
        android:id="@+id/rivalImageIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:background="@color/common_google_signin_btn_text_light_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/estadoRivalTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Rival OK?" />

        <ImageView
            android:id="@+id/imageReadyRivalIV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/rojo"
            app:srcCompat="@drawable/ic_cached_black_24dp" />

        <TextView
            android:id="@+id/estadoJugadorTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Tu OK?" />

        <ImageView
            android:id="@+id/imageReadyJugadorTV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/rojo"
            app:srcCompat="@drawable/ic_cached_black_24dp" />
    </LinearLayout>

    <Button
        android:id="@+id/readyBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="ยก Preparado !" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mensajeEstadoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensaje Estado" />
</LinearLayout>